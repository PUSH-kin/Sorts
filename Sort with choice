#include <iostream>
#include <ctime> 
#include <cstdlib> 
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	int n;
	while (true)
	{
		cout << "Введите размер маасива для сортировки:";
		cin >> n;
		if (cin.fail() or n < 1)
		{
			cout << "Введите натуральное число!" << endl;
			cin.clear();
			cin.ignore(1000, '\n');
		}
		else break;
	}

	int* arr = new int[n];
	srand(time(NULL));

	for (int i = 0; i < n; i++)
	{
		arr[i] = rand() % 201 - 100; 
	}
	cout << endl;

	for (int i = 0; i < n; i++)
		cout << "arr[" << i << "] = " << arr[i] << endl;
	cout << endl;

	for (int i = 0; i < n - 1; i++) {
		int min = i;
		for (int k = i + 1; k < n; k++) {
			if (arr[k] < arr[min]) {min = k;}
		}
		if (min != i) {swap(arr[min], arr[i]);}
	}

	cout << "Массив, отсортированный по возрастанию: " << endl << endl;

	for (int i = 0; i < n; i++)
		cout << "arr[" << i << "] = " << arr[i] << endl;
}
